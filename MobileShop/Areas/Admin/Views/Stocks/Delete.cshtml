@model MobileShop.Areas.Admin.Models.Stock

@{
    ViewData["Title"] = "Delete Stocks";
    Layout = "~/Areas/Admin/Views/shared/_layout.cshtml";
}

<div class="border-bottom m-0 p-0 mb-2">
    <h5>Item Management / Stocks / Delete</h5>
</div>

<div class="row">
    <div class="col-md-6">
        <dl class="row p-2">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.MobilePhone)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.MobilePhone.Item.Name)
                (
                @Html.DisplayFor(model => model.MobilePhone.RAM)
                /
                @Html.DisplayFor(model => model.MobilePhone.Storage)
                )
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ItemColor)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ItemColor.Name)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.UpdatedDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.UpdatedDate)
            </dd>
        </dl>

        <form asp-action="Delete">
            <dl class="row p-2">
                <dt class="col-sm-4">
                    <input type="hidden" asp-for="StockId" />
                    <input type="submit" value="Delete" class="btn btn-info w-100 text-white" />
                </dt>
                <dd class="col-sm-4">
                    <a class="btn btn-secondary w-100 text-white" asp-action="Index">Back to List</a>
                </dd>
            </dl>
        </form>
    </div>
</div>