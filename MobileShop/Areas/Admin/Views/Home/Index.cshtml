
@{
    ViewData["Title"] = "Overview";
    Layout = "~/Areas/Admin/Views/shared/_layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center border-bottom m-0 p-0 mb-2">
    <h4>Overview</h4>
</div>
<div class="row mt-4 g-3">
    <div class="col-3">
        <div class="p-3 bg-light shadow">
            <p class="text-secondary border-bottom">Sales</p>
            <p class="fs-5">₫ @ViewBag.TotalSales.ToString("n0")</p>
        </div>
    </div>
    <div class="col-3">
        <div class="p-3 bg-light shadow">
            <p class="text-secondary border-bottom">Revenue</p>
            <p class="fs-5">₫ @ViewBag.Revenue.ToString("n0")</p>
        </div>
    </div>
    <div class="col-3">
        <div class="p-3 bg-light shadow">
            <p class="text-secondary border-bottom">Orders</p>
            <p class="fs-5">@ViewBag.TotalOrder</p>
        </div>
    </div>
    <div class="col-3">
        <div class="p-3 bg-light shadow">
            <p class="text-secondary border-bottom">Visitors</p>
            <p class="fs-5"></p>
        </div>
    </div>
</div>

<div class="row mt-4 g-3">
    <div class="col-12">
        <div class="p-3 bg-light shadow">
            <p class="text-secondary fs-5 p-3 border-bottom">Recent Movement</p>
            <canvas class="my-4 w-100" id="YearSalesChart" width="900" height="300"></canvas>
        </div>
    </div>
</div>

