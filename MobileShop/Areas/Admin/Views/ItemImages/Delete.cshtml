@model MobileShop.Areas.Admin.Models.ItemImage

@{
    ViewData["Title"] = "Delete Images";
    Layout = "~/Areas/Admin/Views/shared/_layout.cshtml";
}

<div class="border-bottom m-0 p-0 mb-2">
    <h5>Item Management / Item Images / Delete</h5>
</div>

<div class="row">
    <div class="col-md-10">
        <dl class="row p-2">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ItemId)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Item.Name)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Images)
            </dt>
            <dd class="col-sm-8">
                <img class="w-25" src="@("~/lib/images/"+Model.Images)" asp-append-version="true" />
            </dd>
        </dl>

        <form asp-action="Delete">
            <dl class="row p-2">
                <dt class="col-sm-4">
                    <input type="hidden" asp-for="ItemImageId" />
                    <input type="submit" value="Delete" class="btn btn-info w-100 text-white" />
                </dt>
                <dd class="col-sm-4">
                    <a class="btn btn-secondary w-100 text-white" asp-action="Index">Back to List</a>
                </dd>
            </dl>
        </form>
    </div>
</div>
