@model MobileShop.Areas.Admin.Models.ItemImage

@{
    ViewData["Title"] = "Edit Images";
    Layout = "~/Areas/Admin/Views/shared/_layout.cshtml";
}

<div class="border-bottom m-0 p-0 mb-2">
    <h5>Item Management / Item Images / Edit</h5>
</div>

<div class="shadow rounded-0">
    <div class="row">
        <div class="col-md-12 py-3">
            <div class="d-flex justify-content-between border-bottom py-2 mb-3">
                <h5 class="text-secondary">Edit Confirmation</h5>
                <a class="managing text-decoration-none" asp-action="Index"><i class="fa-solid fa-arrow-rotate-left"></i> Back to List</a>
            </div>
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ItemImageId" />
                <div class="form-group mb-2">
                    <label asp-for="ItemId" class="control-label"></label>
                    <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemId"></select>
                    <span asp-validation-for="ItemId" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input asp-for="ImageFile" class="form-control" id="image-input" accept="lib/images/*" />
                    <div id="imagePreview"></div>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group d-flex justify-content-between">
                    <input type="submit" value="Save" class="btn btn-info w-50 text-white me-5" />
                </div>
            </form>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissable rounded-0 border-0 shadow-sm show-success-message">
        <strong>@TempData["SuccessMessage"]</strong>
    </div>
}