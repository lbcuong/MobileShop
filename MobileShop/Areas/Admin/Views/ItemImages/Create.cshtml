@model MobileShop.Areas.Admin.Models.ItemImage

@{
    ViewData["Title"] = "Create Images";
    Layout = "~/Areas/Admin/Views/shared/_layout.cshtml";
}

<div class="border-bottom m-0 p-0 mb-2">
    <h5>Item Management / Item Images / Create</h5>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="ItemId" class="control-label"></label>
                <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemId"></select>
            </div>
            <div class="form-group mb-2">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" accept="lib/images/*" multiple/>
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group mb-2 d-flex justify-content-between">
                <input type="submit" value="Create" class="btn btn-info w-50 text-white me-5" />
                <a class="btn btn-secondary w-50 text-white" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>