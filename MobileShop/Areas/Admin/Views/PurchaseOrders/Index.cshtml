@model IEnumerable<MobileShop.Areas.Admin.Models.PurchaseOrder>

@using Microsoft.AspNetCore.Identity
@using MobileShop.Areas.Identity.Data
@inject SignInManager<MobileShopUser> SignInManager
@inject UserManager<MobileShopUser> UserManager

@{
    ViewData["Title"] = "Purchase Orders";
    Layout = "~/Areas/Admin/Views/shared/_layout.cshtml";
}

<div class="border-bottom m-0 p-0 mb-2">
    <h5>Order Management / Purchase Orders</h5>
</div>

<div class="d-flex justify-content-between m-0 p-0 mb-2">
    @if (SignInManager.IsSignedIn(User) && (Context.User.IsInRole("Staff")))
    {
        <a class="create-function btn btn-info mb-2 text-white" asp-action="Create">New Purchase Order</a>
    }
    <form asp-area="Admin" asp-controller="PurchaseOrders" asp-action="Index" method="get">
        <div class="input-group">
            <input class="search-field border-0" type="text" placeholder="  Filtering ..." name="SearchString" />
            <button class="btn btn-info text-light" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
        </div>
    </form>
</div>

<div class="table-responsive shadow rounded-0">
    <table class="table table-bordered table-hover table-sm my-3">
        <thead class="sticky-top">
            <tr>
                <th>
                    <a class="text-dark text-decoration-none" asp-action="Index" asp-route-sortOrder="@ViewData["OrderSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                        @Html.DisplayNameFor(model => model.PurchaseOrderId)
                    </a>
                </th>
                <th>
                    <a class="text-dark text-decoration-none" asp-action="Index" asp-route-sortOrder="@ViewData["SupplierNameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                        @Html.DisplayNameFor(model => model.SupplierId)
                    </a>
                </th>
                <th>
                    <a class="text-dark text-decoration-none" asp-action="Index" asp-route-sortOrder="@ViewData["TotalSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                        @Html.DisplayNameFor(model => model.Total)
                    </a>
                </th>
                <th>
                    <a class="text-dark text-decoration-none" asp-action="Index" asp-route-sortOrder="@ViewData["OrderDateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </a>
                </th>
                <th>
                    <a class="text-dark text-decoration-none" asp-action="Index" asp-route-sortOrder="@ViewData["StatusSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                        @Html.DisplayNameFor(model => model.Status)
                    </a>
                </th>
                @if (SignInManager.IsSignedIn(User) && (Context.User.IsInRole("Staff") || Context.User.IsInRole("Admin")))
                {
                    <th>
                        Options
                    </th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PurchaseOrderId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Supplier.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total) ₫
                    </td>
                    <td>
                        @Html.ValueFor(modelItem => item.OrderDate, "{0:MMMM dd, yyyy H:mm:ss}")
                    </td>
                    @if (item.Status == "Ordered")
                    {
                        <td class="text-danger">
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    }
                    else if (item.Status == "Received")
                    {
                        <td class="text-success">
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    }
                    else
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    }
                    @if (SignInManager.IsSignedIn(User) && (Context.User.IsInRole("Staff")))
                    {
                        <td style="white-space: nowrap;">
                            @if (item.Status == "Ordered")
                            {
                                <a class="managing text-decoration-none" asp-action="Edit" asp-route-id="@item.PurchaseOrderId"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                                <br />
                            }
                            <a class="managing text-decoration-none" asp-action="Details" asp-route-id="@item.PurchaseOrderId"><i class="fa-solid fa-circle-info"></i> Detail</a>
                        </td>
                    }
                    @if (SignInManager.IsSignedIn(User) && (Context.User.IsInRole("Admin")))
                    {
                        <td style="white-space: nowrap;">
                            <a class="managing text-decoration-none" asp-action="Details" asp-route-id="@item.PurchaseOrderId">Detail</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissable rounded-0 border-0 shadow-sm show-success-message">
        <strong>@TempData["SuccessMessage"]</strong>
    </div>
}