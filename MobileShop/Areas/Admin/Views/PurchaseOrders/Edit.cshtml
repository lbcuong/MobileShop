@model MobileShop.Areas.Admin.Models.PurchaseOrder

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/shared/_layout.cshtml";
}

<div class="border-bottom m-0 p-0 mb-2">
    <h5>Order Management / Purchase Orders / Edit</h5>
</div>

<div class="row shadow rounded-0 m-3 py-3">
    <div class="col-md-12">
        <div class="d-flex justify-content-between border-bottom py-2 mb-3">
            <h5 class="text-secondary">Edit Confirmation</h5>
            <a class="managing text-decoration-none" asp-action="Index"><i class="fa-solid fa-arrow-rotate-left"></i> Back to List</a>
        </div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PurchaseOrderId" />
            <div class="form-group mb-2">
                <label asp-for="PurchaseOrderId" class="control-label"></label>
                <input asp-for="PurchaseOrderId" class="form-control" readonly="readonly" />
                <span asp-validation-for="PurchaseOrderId" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="SupplierId" class="control-label"></label>
                <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId" readonly="readonly"></select>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Total" class="control-label"></label>
                <input asp-for="Total" class="form-control" readonly="readonly" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control" readonly="readonly" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            @if (Model.Status == "Ordered")
            {
                <div class="form-group mb-2">
                    <label asp-for="Status" class="control-label"></label>
                    <input asp-for="Status" class="form-control text-success" value="Received" readonly="readonly" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            }
            <br>
            <div class="form-group d-flex justify-content-between">
                <input type="submit" value="Save" class="btn btn-info w-50 text-white me-5" />
            </div>
        </form>
    </div>
</div>