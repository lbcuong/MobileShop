@model MobileShop.Areas.Admin.Models.Item

@{
    ViewData["Title"] = "Edit Items";
    Layout = "~/Areas/Admin/Views/shared/_layout.cshtml";
}

<div class="border-bottom m-0 p-0 mb-2">
    <h5>Item Management / Items / Edit</h5>
</div>

<div class="shadow rounded-0">
    <div class="row">
        <div class="col-md-12 py-3">
            <div class="d-flex justify-content-between border-bottom py-2 mb-3">
                <h5 class="text-secondary">Edit Confirmation</h5>
                <a class="managing text-decoration-none" asp-action="Index"><i class="fa-solid fa-arrow-rotate-left"></i> Back to List</a>
            </div>
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ItemId" />
                <div class="form-group mb-2">
                    <label asp-for="ItemCategoryId" class="control-label"></label>
                    <select asp-for="ItemCategoryId" class="form-control" asp-items="ViewBag.ItemCategoryId"></select>
                    <span asp-validation-for="ItemCategoryId" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="ItemGroupId" class="control-label"></label>
                    <select asp-for="ItemGroupId" class="form-control" asp-items="ViewBag.ItemGroupId"></select>
                    <span asp-validation-for="ItemGroupId" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Detail" class="control-label"></label>
                    <textarea id="detail" asp-for="Detail" class="form-control"></textarea>
                    <span asp-validation-for="Detail" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="MainImage" class="control-label"></label>
                    <input asp-for="MainImage" class="form-control" id="image-input" accept="lib/images/*" />
                    <div id="imagePreview"></div>
                    <span asp-validation-for="MainImage" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="SecondaryImages" class="control-label"></label>
                    <input asp-for="SecondaryImages" class="form-control" id="multiple-image-input" accept="lib/images/*" multiple />
                    <div id="multipleImagePreview"></div>
                    <span asp-validation-for="SecondaryImages" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="CreatedDate" class="control-label"></label>
                    <input asp-for="CreatedDate" class="form-control" />
                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="UpdatedDate" class="control-label"></label>
                    <input asp-for="UpdatedDate" class="form-control" />
                    <span asp-validation-for="UpdatedDate" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group d-flex justify-content-between">
                    <input type="submit" value="Save" class="btn btn-info w-50 text-white me-5" />
                </div>
            </form>
        </div>
    </div>
</div>
