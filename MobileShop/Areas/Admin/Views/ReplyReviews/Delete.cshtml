@model MobileShop.Areas.Admin.Models.ReplyReview

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/shared/_layout.cshtml";
}

<div class="border-bottom m-0 p-0 mb-2">
    <h5>User Management / Reply Reviews / Delete</h5>
</div>

<div class="row">
    <div class="col-md-10">
        <dl class="row p-2">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ReviewId)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Review.UserName)
                /
                @Html.DisplayFor(model => model.Review.ItemImages.Stock.MobilePhone.Item.Name)
                (
                @Html.DisplayFor(model => model.Review.ItemImages.Stock.MobilePhone.RAM)
                /
                @Html.DisplayFor(model => model.Review.ItemImages.Stock.MobilePhone.Storage)
                )
                @Html.DisplayFor(model => model.Review.ItemImages.Stock.ItemColor.Name)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.UserRole)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.UserRole)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Comment)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Comment)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ReplyDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ReplyDate)
            </dd>
        </dl>

        <form asp-action="Delete">
            <dl class="row p-2">
                <dt class="col-sm-4">
                    <input type="hidden" asp-for="ReplyReviewId" />
                    <input type="submit" value="Delete" class="btn btn-info w-100 text-white" />
                </dt>
                <dd class="col-sm-4">
                    <a class="btn btn-secondary w-100 text-white" asp-action="Index">Back to List</a>
                </dd>
            </dl>
        </form>
    </div>
</div>