@model MobileShop.Areas.Admin.Models.Banner

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/shared/_layout.cshtml";
}

<div class="border-bottom m-0 p-0 mb-2">
    <h5>UI Management / Banners / Delete</h5>
</div>
<div class="shadow rounded-0">
    <div class="d-flex justify-content-between border-bottom py-2 mb-3">
        <h5 class="text-secondary">Delete Confirmation</h5>
        <a class="managing text-decoration-none" asp-action="Index">Back to List</a>
    </div>
    <table class="table table-striped table-borderless my-3">
        <tr class="row">
            <td class="col-4">@Html.DisplayNameFor(model => model.Name)</td>
            <td class="col-8">@Html.DisplayFor(model => model.Name)</td>
        </tr>
        <tr class="row">
            <td class="col-4">@Html.DisplayNameFor(model => model.Image)</td>
            <td class="col-8">
                <img style="width: 15rem;" src="@("~/lib/images/banners/"+Model.Image)" asp-append-version="true" />
            </td>
        </tr>
        <tr class="row">
            <td class="col-4">@Html.DisplayNameFor(model => model.CreatedDate)</td>
            <td class="col-8">@Html.DisplayFor(model => model.CreatedDate)</td>
        </tr>
        <tr class="row">
            <td class="col-4">@Html.DisplayNameFor(model => model.UpdatedDate)</td>
            <td class="col-8">@Html.DisplayFor(model => model.UpdatedDate)</td>
        </tr>
        <tr class="row">
            <td class="col-4">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="BannerId" />
                    <input type="submit" value="Delete" class="btn btn-info text-white w-100" />
                </form>
            </td>
            <td class="col-8">
            </td>
        </tr>
    </table>
</div>