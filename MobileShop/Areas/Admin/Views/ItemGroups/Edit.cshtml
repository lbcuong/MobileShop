@model MobileShop.Areas.Admin.Models.ItemGroup

@{
    ViewData["Title"] = "Edit item group";
    Layout = "~/Areas/Admin/Views/shared/_layout.cshtml";
}

<div class="border-bottom m-0 p-0 mb-2">
    <h5>Item Management / Item Groups / Edit</h5>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ItemGroupId" />
            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CreatedDate" class="control-label">Created Date</label>
                <input asp-for="CreatedDate" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="UpdatedDate" class="control-label">Updated Date</label>
                <input asp-for="UpdatedDate" class="form-control" />
                <span asp-validation-for="UpdatedDate" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group d-flex justify-content-between">
                <input type="submit" value="Save" class="btn btn-info w-50 text-white me-5" />
                <a class="btn btn-secondary w-50 text-white" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

