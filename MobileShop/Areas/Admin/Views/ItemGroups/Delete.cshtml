@model MobileShop.Areas.Admin.Models.ItemGroup

@{
    ViewData["Title"] = "Delete item group";
    Layout = "~/Areas/Admin/Views/shared/_layout.cshtml";
}

<div class="border-bottom m-0 p-0 mb-2">
    <h5>Item Management / Item Groups / Delete</h5>
</div>

<div class="row">
    <div class="col-md-10">
        <dl class="row p-2">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.UpdatedDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.UpdatedDate)
            </dd>
        </dl>

        <form asp-action="Delete">
            <dl class="row p-2">
                <dt class="col-sm-4">
                    <input type="hidden" asp-for="ItemGroupId" />
                    <input type="submit" value="Delete" class="btn btn-info text-white w-100" />
                </dt>
                <dd class="col-sm-4">
                    <a class="btn btn-secondary text-white w-100" asp-action="Index">Back to List</a>
                </dd>
            </dl>
        </form>
    </div>
</div>
