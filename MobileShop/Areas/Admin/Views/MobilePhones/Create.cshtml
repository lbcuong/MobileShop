@model MobileShop.Areas.Admin.Models.MobilePhone

@{
    ViewData["Title"] = "Create Mobile Phones";
    Layout = "~/Areas/Admin/Views/shared/_layout.cshtml";
}


<div class="border-bottom m-0 p-0 mb-2">
    <h5>Item Management / Mobile Phones / Create</h5>
</div>

<div class="row">
    <div class="col-md-12">
