@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="form-LSR row justify-content-center">
    <div class="border border-1 shadow p-5 w-50">
        <div class="text-center">
            <h2 class="mb-4">@ViewData["Title"]</h2>
            <hr>
        </div>
        <form class="px-5" id="account" method="post">
            <div class="mb-3">
                <label asp-for="Input.Email" class="h5 mb-2"></label>
                <input asp-for="Input.Email" class="form-control py-2 w-100" placeholder="  Enter Email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="h5 mb-2"></label>
                <input asp-for="Input.Password" class="form-control py-2 w-100" placeholder="  Enter Password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="Input.RememberMe" class="form-check-input">
                <label asp-for="Input.RememberMe" class="form-check-label">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <hr>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row justify-content-center">
                <button type="submit" class="btn btn-info w-50 fs-5 mb-2 py-2">Log in</button>
            </div>
            <div class="text-center">
                <a class="text text-decoration-none mx-2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                <a>|</a>
                <a class="text text-decoration-none mx-2" id="forgot-password" asp-page="./ForgotPassword">Recovery Password</a>
            </div>
            <div class="row justify-content-center mt-5">
                <h6 class="d-flex justify-content-center">Or Continue With</h6>
                <a href="index.html" class="btn btn-dark py-2 w-25 m-1">
                    <i class="fa-solid fa-phone"></i>
                </a>
                <a href="index.html" class="btn btn-danger w-25 m-1">
                    <i class="fa-brands fa-google"></i>
                </a>
                <a href="index.html" class="btn btn-primary w-25 m-1">
                    <i class="fa-brands fa-facebook"></i>
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
