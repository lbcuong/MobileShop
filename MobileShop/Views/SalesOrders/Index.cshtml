@model IEnumerable<MobileShop.Areas.Admin.Models.SalesOrder>

@{
    ViewData["Title"] = "Manage Order";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="col-md-12 mt-4">
    <div class="d-flex justify-content-between">
        <h5>@ViewData["Title"]</h5>
        <div class="d-flex justify-content-end align-items-center">
            <span class="me-1">Show by:</span>
            <form asp-action="Index" method="get">
                <select class="select-box p-1" name="searchString" onChange="this.form.submit()">
                    <option hidden></option>
                    <option value="last-7-days">Last 7 days</option>
                    <option value="last-30-days">Last 30 days</option>
                    <option value="last-100-days">Last 100 days</option>
                    <option value="">All</option>
                </select>
            </form>
        </div>
    </div>
    <form class="form-LSR bg-white mt-1 py-3 px-2">

        <table class="table table-borderless table-hover">
            @foreach (var salesOrder in Model)
            {
                <thead class="border-top">
                    <tr>
                        <th>
                            <a class="text-secondary text-decoration-none" asp-action="Detail" asp-route-id="@salesOrder.SalesOrderId">
                                Order: @Html.DisplayFor(model => salesOrder.SalesOrderId)
                            </a>
                        </th>
                        <th>
                            <a class="text-secondary text-decoration-none fw-normal">
                                Order date: @Html.ValueFor(model => salesOrder.OrderDate, "{0:MMMM dd, yyyy H:mm:ss}")
                            </a>
                        </th>
                        <th></th>
                        <th></th>
                        @if (salesOrder.Status == "To Pack")
                        {
                            <th>
                                <a class="border border-secondary rounded-pill bg-secondary text-decoration-none text-light fw-normal px-2 py-1">
                                    @Html.ValueFor(model => salesOrder.Status)
                                </a>
                            </th>
                            <th>
                                <a class="text-decoration-none text-primary d-flex justify-content-center" asp-action="Cancel" asp-route-id="@salesOrder.SalesOrderId">
                                    Cancel
                                </a>
                            </th>
                        }
                        else if (salesOrder.Status == "Delivered")
                        {
                            <th>
                                <a class="border border-sucess rounded-pill bg-success text-decoration-none text-light fw-normal px-2 py-1">
                                    @Html.ValueFor(model => salesOrder.Status)
                                </a>
                            </th>
                            <th></th>
                        }
                        else
                        {
                            <th>
                                <a class="border border-secondary rounded-pill bg-secondary text-decoration-none text-light fw-normal px-2 py-1">
                                    @Html.ValueFor(model => salesOrder.Status)
                                </a>
                            </th>
                            <th></th>
                        }
                    </tr>
                </thead>
                @foreach (var salesOrderdetail in salesOrder.SalesOrderDetail)
                {
                    <tbody>
                        <tr style="font-size: 0.9rem;">
                            <td class="col-md-2" style="width: 15rem;">
                                <a asp-action="Detail" asp-route-id="@salesOrderdetail.ItemId">
                                    <img src="~/lib/images/@Html.DisplayFor(model => salesOrderdetail.Item.Image)" class="img-fluid rounded-start">
                                </a>
                            </td>
                            <td class="col-md-4">
                                <p class="m-0">
                                    @Html.DisplayFor(modelItem => salesOrderdetail.Item.Name)
                                </p>
                            </td>
                            <td class="col-md-2">Qty: @Html.DisplayFor(modelItem => salesOrderdetail.Quantity)</td>
                            @if (salesOrderdetail.Item.Price != salesOrderdetail.Item.PromotionPrice)
                            {
                                <td class="col-md-2"> @Html.DisplayFor(modelItem => salesOrderdetail.Item.PromotionPrice) ₫</td>
                            }
                            else
                            {
                                <td class="col-md-2"> @Html.DisplayFor(modelItem => salesOrderdetail.Item.Price) ₫</td>
                            }
                            <td class="col-md-1"></td>
                            <td class="col-md-1"></td>
                        </tr>
                    </tbody>
                }
            }
        </table>
    </form>
</div>