@model PaginatedList<MobileShop.Areas.Admin.Models.ItemImages>

@{
    ViewData["Title"] = "Mobile Phones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row g-2 mb-2 d-flex border-bottom border-2">
        <h5>Điện thoại: <i class="fs-6">120 sản phẩm được tìm thấy</i></h5>
        <div class="filters col d-flex justify-content-start">
            <h6 class="my-auto me-1">Bộ lọc: </h6>
            <p class="my-auto me-1 border p-1 fst-italic">
                Samsung
                <button class="border-0 px-0 bg-white">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </p>
        </div>
        <div class="col-md-3 d-flex justify-content-end mb-2">
            <div class="dropdown">
                <button class="btn btn-secondary" type="button" id="SortMenu" data-bs-toggle="dropdown" aria-expanded="false">
                    Sort by:
                </button>
                <ul class="dropdown-menu" aria-labelledby="SortMenu">
                    <li>
                        <a class="dropdown-item" asp-controller="MobilePhones" asp-action="Index" asp-route-sortOrder="@ViewData["PriceAscSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                            Price low to high
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="MobilePhones" asp-action="Index" asp-route-sortOrder="@ViewData["PriceDescSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                            Price high to low
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row g-2">
        <div class="col-md-3">
            <form asp-controller="MobilePhones" asp-action="Index" method="get">
                <div class="form-font-size-filter px-2 border-end border-2">
                    <div class="px-2 mb-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="text-uppercase">Thương hiệu</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="searchString" value="xiaomi" onChange="this.form.submit()" />
                                <label class="form-check-label">Xiaomi</label>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="searchString" value="apple" onChange="this.form.submit()" />
                                <label class="form-check-label">Apple Iphone</label>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <div class="form-font-size-filter px-2 border-end border-2">
                <div class="px-2 mb-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="text-uppercase">Thương hiệu</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">Apple (Iphone)</label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">Samsung</label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">Huawei</label>
                        </div>
                    </div>
                </div>
                <div class="px-2 mb-2 border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="text-uppercase">Dung lượng</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">32GB</label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                            <label class="form-check-label" for="flexCheckChecked">64GB</label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                            <label class="form-check-label" for="flexCheckChecked">128GB</label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                            <label class="form-check-label" for="flexCheckChecked">256GB</label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                            <label class="form-check-label" for="flexCheckChecked">512GB</label>
                        </div>
                    </div>
                </div>
                <div class="px-2 border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="text-uppercase">RAM</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                3GB
                            </label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value=""
                                   id="flexCheckChecked" checked> <label class="form-check-label"
                                                                         for="flexCheckChecked">
                                4GB
                            </label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value=""
                                   id="flexCheckChecked" checked> <label class="form-check-label"
                                                                         for="flexCheckChecked">
                                6GB
                            </label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value=""
                                   id="flexCheckChecked" checked> <label class="form-check-label"
                                                                         for="flexCheckChecked">
                                8GB
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            @foreach (var item in Model)
            {
                <div class="card card-filter mb-3">
                    <div class="row g-2">
                        <div class="col-md-4 mb-2" style="width: 15rem;">
                            <a asp-area="" asp-controller="MobilePhones" asp-action="Detail" asp-route-id="@item.ItemImageId">
                                <img src="~/lib/images/@Html.DisplayFor(modelItem => item.Images)" class="img-fluid rounded-start">
                            </a>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <a class="text-decoration-none text-dark" asp-area="" asp-controller="MobilePhones" asp-action="Detail" asp-route-id="@item.ItemImageId">
                                    <p class="card-title">
                                        @Html.DisplayFor(modelItem => item.Stock.MobilePhone.Item.Name)
                                        @Html.DisplayFor(modelItem => item.Stock.MobilePhone.RAM)
                                        @Html.DisplayFor(modelItem => item.Stock.MobilePhone.Storage)
                                        @Html.DisplayFor(modelItem => item.Stock.ItemColor.Name)
                                    </p>
                                    <p class="card-text m-0 p-0 text-secondary" style="font-size: 0.8rem;">Color: @Html.DisplayFor(modelItem => item.Stock.ItemColor.Name)</p>
                                    <p class="card-text m-0 p-0 fs-5">@Html.DisplayFor(modelItem => item.Stock.Price) ₫</p>
                                    @if (item.Stock.Quantity < 10 && item.Stock.Quantity >= 1)
                                    {
                                        <p class="card-text text-danger m-0 p-0 fs-6">Only @Html.DisplayFor(modelItem => item.Stock.Quantity) item(s) in stock</p>
                                    }
                                    else if (item.Stock.Quantity == 0)
                                    {
                                        <p class="card-text text-danger m-0 p-0 fs-6">Out of stock</p>
                                    }
                                    else
                                    {
                                        <p></p>
                                    }
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model.TotalPages > 0)
            {
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";

                <div class="row g-2">
                    <div class="d-flex justify-content-center align-items-center">
                        <a asp-area="" asp-controller="MobilePhones" asp-action="Index"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           class="btn btn-default @prevDisabled">
                            <i class="fa-solid fa-left-long"></i> Previous
                        </a>

                        @if (Model.PageIndex > 4)
                        {
                            <a asp-area="" asp-controller="MobilePhones" asp-action="Index"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-pageNumber=1
                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                               class="btn btn-default">
                                1
                            </a>
                            <a class="btn btn-default disabled">...</a>
                        }

                        @for (var pages = Model.StartPage; pages <= Model.EndPage; pages++)
                        {
                            <a asp-area="" asp-controller="MobilePhones" asp-action="Index"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-pageNumber="@pages"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                               class="btn btn-default mx-1 @(pages == Model.PageIndex ? "btn-secondary" : "")">
                                @pages
                            </a>
                        }

                        @if (Model.PageIndex < Model.TotalPages - 2)
                        {
                            <a class="btn btn-default disabled">...</a>
                            <a asp-area="" asp-controller="MobilePhones" asp-action="Index"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-pageNumber="@Model.TotalPages"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                               class="btn btn-default">
                                @Model.TotalPages
                            </a>
                        }

                        <a asp-area="" asp-controller="MobilePhones" asp-action="Index"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           class="btn btn-default @nextDisabled">
                            Next <i class="fa-solid fa-right-long"></i>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

