@model MobileShop.Areas.Admin.Models.Item
@using Microsoft.AspNetCore.Identity
@using MobileShop.Areas.Identity.Data

@inject SignInManager<MobileShopUser> SignInManager
@inject UserManager<MobileShopUser> UserManager

@{
    ViewData["Title"] = "MobilePhones Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var reviews = (IEnumerable<MobileShop.Areas.Admin.Models.Review>)ViewBag.Reviews;
    var replies = (IEnumerable<MobileShop.Areas.Admin.Models.Review>)ViewBag.Replies;
    var images = (IEnumerable<MobileShop.Areas.Admin.Models.ItemImage>)ViewBag.Images;
    var subrelatedItems1 = (IEnumerable<MobileShop.Areas.Admin.Models.Item>)ViewBag.SubrelatedItem1;
    var subrelatedItems2 = (IEnumerable<MobileShop.Areas.Admin.Models.Item>)ViewBag.SubrelatedItem2;
    var subrelatedItems3 = (IEnumerable<MobileShop.Areas.Admin.Models.Item>)ViewBag.SubrelatedItem3;
    var subrelatedItems4 = (IEnumerable<MobileShop.Areas.Admin.Models.Item>)ViewBag.SubrelatedItem4;

    List<int> ratingList = new List<int>();
    foreach (var rating in reviews)
    {
        ratingList.Add(rating.Rate);
    }

    int[] ratingArray = ratingList.ToArray();
}
<div class="container product-option border-bottom my-3">
    <div class="card border-0 py-3">
        <div class="row g-2">
            <div class="col-md-5 border-end">
                <div class="main-item-image d-flex justify-content-center align-items-center border border-2 shadow-sm">
                    <img class="img-fluid p-3" src="~/lib/images/@Html.DisplayFor(model => model.Image)" id="main-item-image">
                </div>
                <div class="d-flex justify-content-center align-items-center my-2">
                    @foreach (var image in images)
                    {
                        <img onclick="changeImage(this)" class="img-thumbnail mx-1"
                             src="~/lib/images/@Html.DisplayFor(model => image.Images)">
                    }
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3">
                    <h6 class="text-uppercase fw-bold">
                        @Html.DisplayFor(model => model.Name)
                    </h6>
                    <h5>@Html.DisplayFor(model => model.Price) ₫</h5>
                    <div class="row">
                        <span class="mb-2">Quantity</span>
                        <div class="d-flex flex-row justify-content-center w-100">
                            <div class="col input-group mb-3">
                                <input class="btn btn-secondary btn-sm" type='button' id="minus" data-min="0" value='–' />
                                <select class="text-center quantity-control w-25" style="-webkit-appearance: none; -moz-appearance: none; text-indent: 1px; text-overflow: '';" id="@($"quantity-{@Model.ItemId}")">
                                    @for (var quantity = 0; quantity <= Model.Quantity; quantity++)
                                    {
                                        if (quantity != 1)
                                        {
                                            <option value="@quantity">@quantity</option>
                                        }
                                        else
                                        {
                                            <option value="@quantity" selected>@quantity</option>
                                        }
                                    }
                                </select>
                                <input class="btn btn-secondary btn-sm" type='button' id="plus" data-max="@Model.Quantity" value='+' />
                                @if (Model.Quantity < 10 && Model.Quantity >= 1)
                                {
                                    <small class="text-danger m-auto ms-5">
                                        Only @Html.DisplayFor(modelItem => Model.Quantity) item(s) in stock
                                    </small>
                                }
                                else if (Model.Quantity == 0)
                                {
                                    <small class="text-danger m-auto ms-5">
                                        Out of stock
                                    </small>
                                }
                                else
                                {
                                    <small class="text-muted m-auto ms-5">In Stock</small>
                                }
                            </div>
                        </div>
                    </div>

                    @if (Model.Quantity != 0)
                    {
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <div class="options d-flex flex-row mt-3 gap-3">
                                <button class="btn btn-info w-50 addtocart" data-itemId="@Model.ItemId" data-categoryURL="MobilePhones">
                                    Add to Cart
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="options d-flex flex-row mt-3 gap-3">
                                <a class="btn btn-info w-50" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Detail", "MobilePhones", new { area = "" , id = Model.ItemId})">
                                    Add to Cart
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
