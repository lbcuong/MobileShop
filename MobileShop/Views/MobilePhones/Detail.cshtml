                            <div class="carousel-item">
                                <div class="row">
                                    @{
                                        int indexSlide3 = 0;
                                    }
                                    @foreach (var subrelatedItem3 in subrelatedItems3)
                                    {
                                        <div class="col @(indexSlide3 == 0 ? "ms-4" : "")">
                                            <a class="text-decoration-none" asp-area="" asp-controller="MobilePhones" asp-action="Detail" asp-route-id="@subrelatedItem3.ItemId">
                                                <img src="@("~/lib/images/" + subrelatedItem3.Image)" asp-append-version="true" class="img-fluid" alt="@subrelatedItem3.Name" />
                                                <h6 class="text-secondary">@Html.DisplayFor(model => subrelatedItem3.Name)</h6>
                                                <p class="text-danger fs-6">@Html.DisplayFor(model => subrelatedItem3.Price) ₫</p>
                                            </a>
                                        </div>
                                        indexSlide3++;
                                    }
                                </div>
                            </div>
                        }
                        @if (ViewBag.SubrelatedItem4.Count > 0)
                        {
                            <div class="carousel-item">
                                <div class="row">
                                    @{
                                        int indexSlide4 = 0;
                                    }
                                    @foreach (var subrelatedItem4 in subrelatedItems4)
                                    {
                                        <div class="col @(indexSlide4 == 0 ? "ms-4" : "")">
                                            <a class="text-decoration-none" asp-area="" asp-controller="MobilePhones" asp-action="Detail" asp-route-id="@subrelatedItem4.ItemId">
                                                <img src="@("~/lib/images/" + subrelatedItem4.Image)" asp-append-version="true" class="img-fluid" alt="@subrelatedItem4.Name" />
                                                <h6 class="text-secondary">@Html.DisplayFor(model => subrelatedItem4.Name)</h6>
