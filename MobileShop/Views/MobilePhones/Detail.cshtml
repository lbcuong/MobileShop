<div class="container border-bottom my-3">
    @{ int commentbox = 1;}
    @foreach (var review in reviews)
    {
        <div class="row g-2 d-flex justify-content-center py-3">
            <div class="col-md-12 px-4">
                <div class="row">
                    <div class="col">
                        <div class="d-flex flex-start">
                            <div class="mb-3">
                                <p class="mb-1">
                                    @if (review.UserRole == "Admin")
                                    {
                                        <span class="text-secondary">
                                            <i class="fa-solid fa-user text-primary"></i>
                                            @Html.DisplayFor(model => review.UserName)
                                        </span>
                                    }
                                    else if (review.UserRole == "Staff")
                                    {
                                        <span class="text-secondary">
                                            <i class="fa-solid fa-user text-info"></i>
                                            @Html.DisplayFor(model => review.UserName)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-secondary">
                                            <i class="fa-solid fa-user text-secondary"></i>
                                            @Html.DisplayFor(model => review.UserName)
                                        </span>
                                    }
                                    <span class="small text-secondary">
                                        - @Html.ValueFor(model => review.CommentDate, "{0:MMMM dd, yyyy H:mm:ss}")
                                    </span>
                                </p>
                                <div class="rating mb-2" id="@review.ReviewId" data-rating="@review.ReviewId" data-rate="@review.Rate"></div>
                                <p class="small mb-0 ms-2">
                                    @Html.DisplayFor(model => review.Comment)
                                </p>
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <a class="text-secondary small text-decoration-none comment-box-expand" data-expand="@commentbox" type="button">Reply</a>
                                    <div class="form-comment-box" id="commentbox-@commentbox">
                                        <form asp-area="" asp-controller="MobilePhones" asp-action="Reply">
                                            <div class="comment-box d-flex align-items-center">
                                                <textarea class="w-75 commentBox" placeholder="Reply" name="Comment" id="commentBox" rows="1"></textarea>

                                                <button type="submit" class="btn"><i class="fa-solid fa-reply"></i></button>
                                                <input type="hidden" name="ItemId" value="@Model.ItemId" />
                                                <input type="hidden" name="ReviewId" value="@review.ReviewId" />
                                            </div>
                                        </form>
                                    </div>
                                    commentbox++;
                                }
                                else
                                {
                                    <a class="text-secondary small text-decoration-none" type="button" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Detail", "MobilePhones", new { area = "" , id = Model.ItemId})">Reply</a>
                                }
                                <div class="border-start border-4">
                                    @foreach (var reply in review.Replies)
                                    {
                                        <div class="d-flex flex-start mt-3 ms-5">
                                            <div>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <p class="mb-1">
                                                        @if (reply.UserRole == "Admin")
                                                        {
                                                            <span class="text-secondary">
                                                                <i class="fa-solid fa-user text-primary"></i>
                                                                @Html.DisplayFor(model => reply.UserName)
                                                            </span>
                                                        }
                                                        else if (reply.UserRole == "Staff")
                                                        {
                                                            <span class="text-secondary">
                                                                <i class="fa-solid fa-user text-info"></i>
                                                                @Html.DisplayFor(model => reply.UserName)
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-secondary">
                                                                <i class="fa-solid fa-user text-secondary"></i>
                                                                @Html.DisplayFor(model => reply.UserName)
                                                            </span>
                                                        }
                                                        <span class="small text-secondary">
                                                            - @Html.ValueFor(model => reply.ReplyDate, "{0:MMMM dd, yyyy H:mm:ss}")
                                                        </span>
                                                    </p>
                                                </div>
                                                <p class="small mb-0">
                                                    @Html.DisplayFor(model => reply.Comment)
                                                </p>
                                            </div>
                                        </div>
                                    }
                                </div>
                                @if (review.Replies.Count != 0)
                                {
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <a class="text-secondary ms-5 mt-1 small text-decoration-none comment-box-expand" data-expand="@commentbox" type="button">Reply</a>
                                        <div class="form-comment-box ms-5" id="commentbox-@commentbox">
                                            <form asp-area="" asp-controller="MobilePhones" asp-action="Reply">
                                                <div class="comment-box d-flex align-items-center">
                                                    <textarea class="w-75 commentBox" placeholder="Reply" name="Comment" id="commentBox" rows="1"></textarea>

                                                    <button type="submit" class="btn"><i class="fa-solid fa-reply"></i></button>
                                                    <input type="hidden" name="ItemId" value="@Model.ItemId" />
                                                    <input type="hidden" name="ReviewId" value="@review.ReviewId" />
                                                </div>
                                            </form>
                                        </div>
                                        commentbox++;
                                    }
                                    else
                                    {
                                        <a class="text-secondary small text-decoration-none" type="button" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Detail", "MobilePhones", new { area = "" , id = Model.ItemId})">Reply</a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissable rounded-0 border-0 shadow-sm show-success-message">
        <strong>@TempData["SuccessMessage"]</strong>
    </div>
}

@section Scripts {
    <script>
        var ratings = JSON.parse('@Newtonsoft.Json.JsonConvert.SerializeObject(ratingArray)');
    </script>
}
