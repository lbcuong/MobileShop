                            <a class="btn btn-secondary w-75 text-light" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Detail", "MobilePhones", new { area = "" , id = Model.ItemId})">
                                Write a Review
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container border-bottom my-3">
    <div class="row g-2 d-flex justify-content-center editor-form py-3">
        <div class="col-md-12 px-4">
            @Html.Raw(Model.Detail)
        </div>
    </div>
</div>
<div class="container border-bottom my-3">
    <div class="row g-2 d-flex justify-content-center py-3">
        <div class="col-md-12 px-4">
            <h5 class="text-left text-secondary">
                Related Item
            </h5>
            <div>
                <div id="carouselRelatedItems" class="carousel slide carouselItems" data-bs-interval="false" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @if (ViewBag.SubrelatedItem1.Count > 0)
                        {
                            <div class="carousel-item active">
                                <div class="row">
                                    @{
                                        int indexSlide1 = 0;
                                    }
                                    @foreach (var subrelatedItem1 in subrelatedItems1)
                                    {
                                        <div class="col @(indexSlide1 == 0 ? "ms-4" : "")">
                                            <a class="text-decoration-none" asp-area="" asp-controller="MobilePhones" asp-action="Detail" asp-route-id="@subrelatedItem1.ItemId">
                                                <img src="@("~/lib/images/" + subrelatedItem1.Image)" asp-append-version="true" class="img-fluid" alt="@subrelatedItem1.Name" />
                                                <h6 class="text-secondary">@Html.DisplayFor(model => subrelatedItem1.Name)</h6>
                                                <p class="text-danger fs-6">@Html.DisplayFor(model => subrelatedItem1.Price) ₫</p>
                                            </a>
                                        </div>
                                        indexSlide1++;
                                    }
                                </div>
                            </div>
                        }
                        @if (ViewBag.SubrelatedItem2.Count > 0)
                        {
                            <div class="carousel-item">
                                <div class="row">
                                    @{
                                        int indexSlide2 = 0;
                                    }
                                    @foreach (var subrelatedItem2 in subrelatedItems2)
                                    {
                                        <div class="col @(indexSlide2 == 0 ? "ms-4" : "")">
                                            <a class="text-decoration-none" asp-area="" asp-controller="MobilePhones" asp-action="Detail" asp-route-id="@subrelatedItem2.ItemId">
                                                <img src="@("~/lib/images/" + subrelatedItem2.Image)" asp-append-version="true" class="img-fluid" alt="@subrelatedItem2.Name" />
                                                <h6 class="text-secondary">@Html.DisplayFor(model => subrelatedItem2.Name)</h6>
