                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="col-md-3 d-flex justify-content-center my-auto" data-bs-toggle="modal" data-bs-target="#ModalReview">
                            <button type="button" class="btn btn-secondary w-75 text-light">Write a Review</button>
