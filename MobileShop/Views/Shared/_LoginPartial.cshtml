@using Microsoft.AspNetCore.Identity
@using MobileShop.Areas.Identity.Data
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor HttpContextAccessor

@inject SignInManager<MobileShopUser> SignInManager
@inject UserManager<MobileShopUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User) && (Context.User.IsInRole("Admin") || Context.User.IsInRole("Staff")))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Admin" asp-page="/Views/Index" title="Manage">Dashboard</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else if (SignInManager.IsSignedIn(User) && Context.User.IsInRole("Member"))
    {

        var session = HttpContextAccessor.HttpContext.Session;
        string jsoncart = session.GetString(MobileShop.Controllers.CartController.CARTKEY);
        if (jsoncart != null)
        {
            var cart = JsonConvert.DeserializeObject<List<CartItem>>(jsoncart);
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index">Cart(@cart.Count)</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index">Cart(0)</a>
            </li>
        }

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Cart</a>
        </li>
    }
</ul>
